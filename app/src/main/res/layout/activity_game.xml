<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/pattern_background"
    tools:context=".GameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@android:color/transparent">

        <ImageButton
            android:id="@+id/button_home"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_home"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/show_all_bingo_numbers"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_list"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!--<Button
            android:gravity="center_horizontal"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:drawableStart="@drawable/ic_account_circle"
            android:layout_width="50dp"

            android:background="@drawable/background_transparent"
            android:layout_height="50dp" />-->

    </LinearLayout>

    <!--android:paddingTop="5dp" -->

    <LinearLayout
        android:id="@+id/contentPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="15dp"
        android:paddingRight="25dp"
        android:paddingLeft="25dp"
        android:paddingBottom="15dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="0dp"
            android:layout_weight="20"
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:layout_height="140dp">




            <!-- Contenedor de informacion general-->
            <LinearLayout
                android:padding="10dp"
                android:orientation="vertical"
                android:background="@drawable/background_transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- 1era fila -->
                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Bingos por jugar layout -->
                    <!--<LinearLayout
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="25sp"
                            android:textColor="@color/white"
                            android:id="@+id/actualBingoNumber"
                            android:text="5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />




                    </LinearLayout>-->
                    <RelativeLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/relativelayout"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <ImageView
                            android:id="@+id/bingo_ball_image"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                             />

                        <TextView
                            android:id="@+id/actualBingoNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@id/bingo_ball_image"
                            android:layout_alignTop="@id/bingo_ball_image"
                            android:layout_alignRight="@id/bingo_ball_image"
                            android:layout_alignBottom="@id/bingo_ball_image"
                            android:layout_margin="1dp"
                            android:gravity="center"

                            android:textColor="@color/black"
                            android:textStyle="bold"/>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView

                            android:src="@drawable/ic_account_circle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_marginLeft="5dp"
                            android:textSize="14sp"
                            android:text="250"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Segunda fila-->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal"

                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <ImageView
                            android:id="@+id/pattern_game"
                            android:layout_width="40dp"
                            android:layout_height="40dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:id="@+id/numBingosLeft"
                            android:text="5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textSize="9sp"
                            android:textColor="@color/white"

                            android:text="bingos por jugar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                    </LinearLayout>
                </LinearLayout>

                <!--<ImageButton
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_list"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />-->


            </LinearLayout>





        </LinearLayout>

    </LinearLayout>

</LinearLayout>